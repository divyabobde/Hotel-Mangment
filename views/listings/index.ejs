<% layout("/layouts/boilerplate") %>


<!-- =============================
     FILTER BAR (FILTERS + TOGGLE)
     ============================= -->
<div id="filter-bar">

  <!-- LEFT SIDE FILTERS -->
  <div id="filters">

    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Room</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic City</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pool City</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-wheat-awn"></i></div>
      <p>Farms</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-dungeon"></i></div>
      <p>Domes</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>

  </div>

  <!-- RIGHT SIDE GST TOGGLE BOX -->
  <div class="tax-toggle-box">
    <label class="fw-semibold">GST</label>

    <label class="airbnb-switch">
      <input type="checkbox" id="flexSwitchCheckDefault">
      <span class="airbnb-slider"></span>
    </label>
  </div>

</div>

<!-- =============================
            LISTINGS
     ============================= -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 px-4 mt-3">
  <% for (let listing of allListing) { %>
    <div class="col">
      <div class="card h-100 shadow-sm">

        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem; object-fit: cover;">

        <div class="card-body">

          <h5 class="card-title mb-1"><%= listing.title %></h5>

          <p class="card-text mb-1 fw-semibold">
            â‚¹ <%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A' %> / night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>

          <p class="card-text text-muted mb-2"><%= listing.country %></p>

          <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm">View Details</a>

        </div>
      </div>
    </div>
  <% } %>
</div>

<!-- =============================
       GST TOGGLE FUNCTION
     ============================= -->
<script>
  document.getElementById("flexSwitchCheckDefault").addEventListener("change", function () {
    let taxInfo = document.querySelectorAll(".tax-info");
    taxInfo.forEach(info => {
      info.style.display = this.checked ? "inline" : "none";
    });
  });
</script>
