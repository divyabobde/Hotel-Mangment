<% layout("/layouts/boilerplate") %>

<body class="bg-light">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">

          <!-- Listing Image -->
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image" 
               style="height: 420px; object-fit: cover;">

         
          <!-- Card Body -->
          <div class="card-body p-4">
            <h3 class="card-title fw-bold mb-2 text-dark"><%= listing.title %></h3>
            
            <p><b>Owned by- </b><i><%= listing.owner?.username || "Unknown" %></i></p>

            <p class="text-muted mb-3"><%= listing.location %>, <%= listing.country %></p>

            <p class="fs-5 fw-semibold text-dark mb-4">
              ₹ <%= listing.price.toLocaleString('en-IN') %> 
              <span class="text-secondary fs-6">/ night</span>
            </p>

            <p class="card-text text-secondary mb-4"><%= listing.description %></p>

            <% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex gap-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-red px-4 fw-semibold">Edit</a>
              
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-outline-danger px-4 fw-semibold">Delete</button>
              </form>
            </div>
            <% } %>
          </div>
        </div>

        <!-- ⭐ Review Section -->
         <% if(currUser){ %>

        <div class="col-12 mt-5">
          <h3>Leave a Review</h3>
          <br>

          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

           

            <div class="mb-3 mt-3">
              <label class="form-label">Rating</label>

              <!-- Hidden field -->
              <input type="hidden" id="ratingInput" name="review[rating]" value="3" />

              <div class="star-slot" id="slotStars">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
            </div>

            <script>
              const stars = document.querySelectorAll("#slotStars .star");
              const ratingInput = document.getElementById("ratingInput");

              stars.forEach((star) => {
                star.addEventListener("click", () => {
                  let value = star.dataset.value;
                  ratingInput.value = value;

                  stars.forEach(s => s.classList.remove("active"));
                  stars.forEach(s => {
                    if (s.dataset.value <= value) s.classList.add("active");
                  });
                });
              });
            </script>

            <!-- Comment -->
            <div class="mb-3 mt-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
              <div class="invalid-feedback">
                Please submit some comments for review
              </div>
            </div>

            <button class="btn btn-outline-dark">Submit</button>
          </form>
          <hr>
        </div>

        <% } %>

        <!-- ⭐ All Reviews Section -->
        <h4 class="mt-5 mb-3 fw-bold text-dark border-bottom pb-2">All Reviews</h4>

        <% if (listing.reviews && listing.reviews.length > 0) { %>
          <div class="list-group mb-5">

            <% listing.reviews.forEach(review => { %>
              <div class="list-group-item border-0 shadow-sm mb-3 rounded-3 p-4">
               <h5 class="card-title fw-semibold text-dark">@<%= review.author.username%></h5>

                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h6 class="mb-0 fw-semibold text-dark">
                    Rating:
                    <% for (let i = 0; i < review.rating; i++) { %>
                      ⭐
                    <% } %>
                  </h6>
                  <small class="text-muted">
                    <%= new Date(review.createdAt).toLocaleDateString("en-IN") %>
                  </small>
                </div>

                <p class="mb-0 text-secondary"><%= review.comment %></p>

                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mt-2">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="alert alert-info mt-3" role="alert">
            No reviews yet. Be the first to share your experience!
          </div>
        <% } %>

      </div>
    </div>
  </div>
  <!-- ⭐ MAP SECTION AT THE END OF PAGE -->
<h4 class="mt-5 mb-3 fw-bold text-dark border-bottom pb-2">Map Location</h4>

<div id="map" style="height: 350px; width: 100%; border-radius: 12px;" class="my-4"></div>

 
</body>
